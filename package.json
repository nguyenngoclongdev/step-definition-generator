{
    "name": "cypress-cucumber-step-definition-generator",
    "displayName": "Cucumber Step Definition Generator for Cypress/Playwright/Cucumberjs",
    "description": "Generate step definitions for multiple framework (.e.g Cypress, Playwright, Cucumberjs)",
    "icon": "images/cycucum.png",
    "version": "2.0.0",
    "main": "./dist/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/nguyenngoclongdev/cypress-cucumber-step-definition-generator"
    },
    "bugs": {
        "url": "https://github.com/nguyenngoclongdev/cypress-cucumber-step-definition-generator/issues"
    },
    "sponsor": {
        "url": "https://www.paypal.me/longnguyenngoc"
    },
    "homepage": "https://nguyenngoclongdev.github.io",
    "categories": [
        "Testing"
    ],
    "keywords": [
        "cypress",
        "cucumber",
        "cucumberjs",
        "generate",
        "generator",
        "step",
        "definition",
        "feature",
        "gherkin",
        "playwright"
    ],
    "contributes": {
        "commands": [
            {
                "when": "resourceLangId == feature",
                "command": "extension.generateStepDefinitionsToClipboard",
                "title": "Cycucum: Generate step definitions to clipboard"
            },
            {
                "when": "resourceLangId == feature",
                "command": "extension.generateStepDefinitionsToFile",
                "title": "Cycucum: Generate step definitions to file"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceExtname == .feature",
                    "command": "extension.generateStepDefinitionsToClipboard",
                    "title": "Cycucum: Generate step definitions to clipboard"
                },
                {
                    "when": "resourceExtname == .feature",
                    "command": "extension.generateStepDefinitionsToFile",
                    "title": "Cycucum: Generate step definitions to file"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceExtname == .feature",
                    "command": "extension.generateStepDefinitionsToClipboard",
                    "title": "Cycucum: Generate step definitions to clipboard"
                },
                {
                    "when": "resourceExtname == .feature",
                    "command": "extension.generateStepDefinitionsToFile",
                    "title": "Cycucum: Generate step definitions to file"
                }
            ]
        },
        "configuration": {
            "title": "Cycucum",
            "properties": {
                "cycucum.runner": {
                    "type": "string",
                    "default": "cypress",
                    "enum": [
                        "cypress",
                        "playwright",
                        "cucumberjs"
                    ],
                    "description": "BDD Testing Framework"
                },
                "cycucum.language": {
                    "type": "string",
                    "default": "typescript",
                    "enum": [
                        "javascript",
                        "typescript"
                    ],
                    "description": "The language of step deinitions"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild": "yarn esbuild-base -- --sourcemap",
        "esbuild-watch": "yarn esbuild-base -- --sourcemap --watch",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "deploy": "vsce publish --yarn",
        "pree2e": "code --uninstall-extension nguyenngoclong.cypress-cucumber-step-definition-generator || true",
        "e2e": "vsce package -o ./cycucum.vsix",
        "poste2e": "code --install-extension ./cycucum.vsix"
    },
    "engines": {
        "vscode": "^1.78.0"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.1.4",
        "@types/vscode": "^1.78.0",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "esbuild": "^0.17.19",
        "eslint": "^8.40.0",
        "glob": "^10.2.3",
        "mocha": "^10.2.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@nguyenngoclongdev/cycucum-gherkin": "1.1.2",
        "fs": "0.0.1-security"
    },
    "author": "Nguyen Ngoc Long",
    "publisher": "nguyenngoclong",
    "license": "MIT"
}
